				{
					"name": "4.2 Ver Planos",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if(jsonData.length > 0) pm.environment.set(\"planId\", jsonData[0]._id);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{clientToken}}",
								"type": "text"
							}
						],
						"url": "{{baseUrl}}/plans"
					}
				},
				{
					"name": "4.3 Completar Treino (com Foto)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{clientToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "status",
									"value": "completed",
									"type": "text"
								},
								{
									"key": "feedback",
									"value": "Muito intenso!",
									"type": "text"
								},
								{
									"key": "image",
									"type": "file",
									"src": []
								}
							]
						},
						"url": "{{baseUrl}}/plans/{{planId}}/complete"
					}
				},
				{
					"name": "4.4 Atualizar Perfil (Tema Dark)",
