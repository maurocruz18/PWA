						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"ptToken\", jsonData.token);",
									"pm.environment.set(\"ptId\", jsonData.user._id);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"ptRicardo\",\n    \"password\": \"123456\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": "{{baseUrl}}/auth/login"
					}
				},
				{
					"name": "3.2 Criar Cliente (Associação Auto)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"clientId\", jsonData._id);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{ptToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"clienteSofia\",\n    \"password\": \"123456\",\n    \"role\": \"CLIENT\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": "{{baseUrl}}/auth/register"
					}
				},
				{
					"name": "3.3 Criar Plano de Treino",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{ptToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"clientId\": \"{{clientId}}\",\n    \"dayOfWeek\": 1,\n    \"exercises\": [\n        { \"name\": \"Supino\", \"sets\": 3, \"reps\": 10, \"videoLink\": \"http://youtube.com/supino\" },\n        { \"name\": \"Agachamento\", \"sets\": 4, \"reps\": 12 }\n    ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": "{{baseUrl}}/plans"
					}
				},
				{
					"name": "3.4 Listar Meus Clientes",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{ptToken}}",
								"type": "text"
							}
						],
						"url": "{{baseUrl}}/users/my-clients"
					}
				},
				{
					"name": "3.5 Dashboard Stats (Ver do Cliente)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{ptToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/plans/stats?clientId={{clientId}}",
							"host": ["{{baseUrl}}"],
							"path": ["plans", "stats"],
							"query": [
								{
									"key": "clientId",
									"value": "{{clientId}}"
								}
							]
						}
					}
				}
			]
		},
		{
