	"item": [
		{
			"name": "1. Autenticação & Setup",
			"item": [
				{
					"name": "1.1 Registar ADMIN",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"adminMaster\",\n    \"password\": \"123456\",\n    \"role\": \"ADMIN\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": "{{baseUrl}}/auth/register"
					}
				},
				{
					"name": "1.2 Login ADMIN",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"adminToken\", jsonData.token);",
									"console.log(\"Admin Token Definido\");"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"adminMaster\",\n    \"password\": \"123456\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": "{{baseUrl}}/auth/login"
					}
				},
				{
					"name": "1.3 Registar PT (Fica Pendente)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"pendingPtId\", jsonData._id);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"ptRicardo\",\n    \"password\": \"123456\",\n    \"role\": \"PT\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": "{{baseUrl}}/auth/register"
					}
				}
			]
		},
		{
			"name": "2. Administração",
			"item": [
				{
					"name": "2.1 Listar PTs Pendentes",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"url": "{{baseUrl}}/admin/pending-pts"
					}
				},
				{
					"name": "2.2 Validar PT",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"url": "{{baseUrl}}/admin/users/{{pendingPtId}}/validate"
					}
				},
				{
					"name": "2.3 Alterar PT de um Cliente",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": \"{{clientId}}\",\n    \"newPtId\": \"{{pendingPtId}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": "{{baseUrl}}/admin/users/change-pt"
					}
				}
			]
		},
		{
			"name": "3. Fluxo do PT",
